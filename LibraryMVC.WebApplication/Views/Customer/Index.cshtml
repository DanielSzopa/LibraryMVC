@model LibraryMVC.Application.CustomerListVm

@{
    ViewData["Title"] = "Customers";
    ViewData["Controller"] = "Customer";
    ViewData["Action"] = "Index";
}

<h1>Customers</h1>

<p>
    <a class="btn btn-primary" asp-action="">Create</a>
</p>
<form class="form-inline my-2 my-lg-0" asp-controller="Customer" asp-action="Index" method="get">
    <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search" name="searchString" id="searchString" asp-for="SearchString">
    <button class="btn btn-outline-primary my-2 my-sm-0" type="submit">Search</button>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
               Id
            </th>
            <th>
                Name
            </th>        
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Customers) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
          
            <td>
                <a class="btn btn-secondary" asp-action="">Edit</a>
                <a class="btn btn-primary" asp-action="">Details</a>
                <a class="btn btn-secondary" asp-action="">Rentals</a>
                <a class="btn btn-secondary" asp-action="">Reservations</a>
            </td>
        </tr>
}
    </tbody>
</table>

<partial name="_PaginationPartial" view-data="ViewData" model="Model" />