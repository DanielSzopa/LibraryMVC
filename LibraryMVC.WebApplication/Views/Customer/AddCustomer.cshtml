@model LibraryMVC.Application.NewCustomerVm

@{
    ViewData["Title"] = "Create Customer";
}

<h1>Create Customer</h1>

<h4>Complete form to create a new customer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddCustomer">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" class="form-control" />
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pesel" class="control-label"></label>
                <input asp-for="Pesel" type="number" class="form-control" />
                <span asp-validation-for="Pesel" class="text-danger"></span>
            </div>
            @for (int i = 0; i < 2; i++)
            {
                string valueNumber = $"Number {i + 1}";
                <div class="form-group">
                    <label asp-for="CustomerContactDetail.TelephoneNumbers" class="control-label">@valueNumber</label>
                    <input asp-for="CustomerContactDetail.TelephoneNumbers[i].Number" class="form-control" value=0 />
                    <span asp-validation-for="CustomerContactDetail.TelephoneNumbers" class="text-danger"></span>
                </div>
            }
            <div class="form-group">
                <label asp-for="Address.Country" class="control-label"></label>
                <input asp-for="Address.Country" class="form-control" />
                <span asp-validation-for="Address.Country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address.Locality" class="control-label"></label>
                <input asp-for="Address.Locality" class="form-control" />
                <span asp-validation-for="Address.Locality" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address.Street" class="control-label"></label>
                <input asp-for="Address.Street" class="form-control" />
                <span asp-validation-for="Address.Street" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address.PostCode" class="control-label"></label>
                <input asp-for="Address.PostCode" class="form-control" />
                <span asp-validation-for="Address.PostCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address.NumberOfLocal" class="control-label">Local</label>
                <input asp-for="Address.NumberOfLocal" class="form-control" />
                <span asp-validation-for="Address.NumberOfLocal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address.NumberOfAccommodation" class="control-label">Accommodation</label>
                <input asp-for="Address.NumberOfAccommodation" class="form-control" />
                <span asp-validation-for="Address.NumberOfAccommodation" class="text-danger"></span>
            </div>
            @if (Model.isLocalAccount == false)
            {
                <div class="form-group">
                    <label asp-for="CustomerContactDetail.Mail" class="control-label"></label>
                    <input asp-for="CustomerContactDetail.Mail" class="form-control" />
                    <span asp-validation-for="CustomerContactDetail.Mail" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input value="-LibraryMvc123-" asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            }
            <div class="form-group">
                <input type="hidden" asp-for="isLocalAccount" asp-route-isLocalAccount=true class="form-control" />
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-secondary" asp-action="Index">Close</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
