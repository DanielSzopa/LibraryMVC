@model LibraryMVC.Application.CustomerDetailsVm

@{
    ViewData["Title"] = $"";
}

<h1>@Model.FirstName @Model.LastName</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
          FirstName
        </dt>
        <dd class="col-sm-10">
            @Model.FirstName
        </dd>
        <dt class="col-sm-2">
           LastName
        </dt>
        <dd class="col-sm-10">
            @Model.LastName
        </dd>
        <dt class="col-sm-2">
            Pesel
        </dt>
        <dd class="col-sm-10">
           @Model.Pesel
        </dd>
        <dt class="col-sm-2">
            Mail
        </dt>
        <dd class="col-sm-10">
            @Model.Mail
        </dd>
        @for (int i = 0; i < 2; i++)
        {
            string valueNumber = $"Number {i + 1}";
            <dt class="col-sm-2">
                @valueNumber
            </dt>
            <dd class="col-sm-10">
                @Model.Number[i].Number
            </dd>
        }
        <dt class="col-sm-2">
            Country
        </dt>
        <dd class="col-sm-10">
            @Model.Country
        </dd>
        <dt class="col-sm-2">
            Locality
        </dt>
        <dd class="col-sm-10">
            @Model.Locality
        </dd>
        <dt class="col-sm-2">
            Street
        </dt>
        <dd class="col-sm-10">
            @Model.Street
        </dd>
        <dt class="col-sm-2">
            PostCode
        </dt>
        <dd class="col-sm-10">
            @Model.PostCode
        </dd>
        <dt class="col-sm-2">
            Local
        </dt>
        <dd class="col-sm-10">
            @Model.NumberOfLocal
        </dd>
        <dt class="col-sm-2">
            Accommodation
        </dt>
        <dd class="col-sm-10">
            @Model.NumberOfAccommodation
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-secondary" asp-controller="Home" asp-action="Index">Back</a>
    <a class="btn btn-primary" asp-action="">Rentals</a>
    <a class="btn btn-primary" asp-action="">Reservations</a>
    <a class="btn btn-secondary" asp-action="EditProfile" asp-route-id="@Model.Id">Edit</a>
</div>
