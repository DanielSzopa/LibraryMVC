@model LibraryMVC.Application.AuthorListVm

@{
    ViewData["Title"] = "Authors";
    ViewData["Controller"] = "Book";
    ViewData["Action"] = "DisplayListOfAuthors";
}

<h1>Authors</h1>

<p>
    <a asp-action="AddAuthor">Create Author</a> |
    <a asp-action="Index">Books</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
               FirstName
            </th>
            <th>
               LastName
            </th>
            <th>
              Books
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Authors)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumberOfBooks)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Details", "DisplayAuthorDetails", new { item.Id }) |
                    @Html.ActionLink("Delete", "DeleteAuthor", new { item.Id })
                </td>
            </tr>

        }       
    </tbody>
</table>

<partial name="_PaginationPartial" view-data="ViewData" model="Model" />