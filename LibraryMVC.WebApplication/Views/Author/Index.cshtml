@model LibraryMVC.Application.AuthorListVm

@{
    ViewData["Title"] = "Authors";
    ViewData["Controller"] = "Book";
    ViewData["Action"] = "ViewAuthors";
}

<h1>Authors</h1>

<p>
    <a asp-controller="Author" asp-action="AddAuthor">Create Author</a>
    |
    <a asp-controller="Book" asp-action="Index">Books</a>
    |
    <a asp-controller="Category" asp-action="Index">Categories</a>
    |
    <a asp-controller="TypeOfBook" asp-action="Index">TypeOfBooks</a>
    |
    <a asp-controller="Publisher" asp-action="Index">Publishers</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
               FirstName
            </th>
            <th>
               LastName
            </th>
            <th>
              Books
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Authors)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumberOfBooks)
                </td>
                <td>
                    @if (item.Id != 1)
                    {
                        <a asp-controller="Author" asp-action="EditAuthor" asp-route-id="@item.Id" class="btn btn-secondary">Edit</a>
                    }
                        <a asp-controller="Author" asp-action="AuthorDetails" asp-route-id="@item.Id" class="btn btn-primary">Details</a>
                    @if (item.Id != 1) 
                    { 
                        <a asp-controller="Author" asp-action="DeleteAuthor" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    }
                </td>
            </tr>

        }       
    </tbody>
</table>

<partial name="_PaginationPartial" view-data="ViewData" model="Model" />