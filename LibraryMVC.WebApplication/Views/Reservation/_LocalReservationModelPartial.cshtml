@model LibraryMVC.Application.LocalReservationVm


<div class="modal fade" id="createLocalReservation">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="createLocalReservation">Local Reservation</h4>
                <button type="button" class="close" data-dismiss="modal">
                    <span>x</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="/Reservation/CreateLocalReservation" method="post">
                    <input type="hidden" asp-for="Id" class="form-control" />
                    <div class="form-group">
                        <label asp-for="BookId" class="control-label">Books</label>
                        <select asp-for="BookId" class="form-control" asp-items="@(new SelectList(Model.Books,"Id", "BookFullName"))"></select>
                        <span asp-validation-for="BookId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CustomerId" class="control-label">Customers</label>
                        <select asp-for="CustomerId" class="form-control" asp-items="@(new SelectList(Model.Customers, "Id", "CustomerFullName"))" ))"></select>
                        <span asp-validation-for="CustomerId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="From">Reservation From</label>
                        <input asp-for="From" class="form-control" readonly="readonly" />
                    </div>
                    <div class="form-group">
                        <label asp-for="To">Reservation To</label>
                        <input asp-for="To" class="form-control" readonly="readonly" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" data-save="modal">Save</button>
            </div>
        </div>
    </div>
</div>
